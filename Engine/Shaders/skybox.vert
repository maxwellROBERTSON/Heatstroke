layout(set = 0, binding = 0) uniform SceneUBO {
	mat4 projection;
	mat4 view;
	vec4 position;
} sceneUbo;

layout(location = 0) out vec3 outPos;

void main() {
    const vec3 pos = skyboxVertices[gl_VertexIndex];
    outPos = pos;
    // Remove translation from view matrix
    mat4 viewMat = mat4(mat3(sceneUbo.view));
    gl_Position = sceneUbo.projection * viewMat * vec4(pos.xyz, 1.0);
}